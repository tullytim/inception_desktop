{
  "version": "1.0.5",
  "main": "main.js",
  "name": "inception",
  "productName": "Inception",
  "license": "MIT",
  "author": "Tim Tully <tim@menlovc.com>",
  "scripts": {
    "start": "electron .",
    "dev": "NODE_ENV=development electron .",
    "build": "electron-builder --mac --win --linux",
    "build-win": "electron-builder --win",
    "build-mac": "electron-builder --mac",
    "build-linux": "electron-builder --linux"
  },
  "build": {
    "appId": "com.timtully.inception",
    "directories": {
      "output": "dist"
    },
    "files": [
      "main.js",
      "renderer.js",
      "preload.js",
      "index.html",
      "package.json",
      "assets/",
      "images/"
    ],
    "mac": {
      "icon": "assets/512-mac.png",
      "category": "public.app-category.productivity",
      "identity": "74F28C20CD02E35ACFFF7F3B0A5384265EF9976F"
    },
    "win": {
      "target": "nsis"
    },
    "linux": {
      "target": [
        {
          "target": "AppImage",
          "arch": ["x64"]
        },
        {
          "target": "deb",
          "arch": ["x64"]
        },
        {
          "target": "rpm",
          "arch": ["x64"]
        }
      ],
      "category": "Office"
    }
  },
  "dependencies": {
    "better-sqlite3": "^11.10.0"
  },
  "devDependencies": {
    "electron": "^36.4.0",
    "electron-builder": "^26.0.12",
    "electron-rebuild": "^3.2.9"
  }
}
